<h4>Profile</h4>
<p>Name: <%= current_user.name %></p>
<p>Surname: <%= current_user.surname %></p>
<p>Email: <%= current_user.email %></p>

<div class="form">
  <p>Ваші авто:</p>
  <% @user_car.each do |car| %>
    <%= car.brand_name %>
    <%= car.model %>
    <%= car.car_year %></br>
  <% end %>

<%= simple_form_for :profile, url: profile_index_path do |form|%>
  <p>Інформація про авто:</p>
  <div class = "field">
    <%= form.label "Марка"%>
    <%= form.collection_select :brand_id, Brand.order(:brand_name), :id, :brand_name %>
  </div>
  <div class = "field">
    <%= form.label "Модель"%>
    <%= form.grouped_collection_select :car_model_id, Brand.order(:brand_name), :car_models, :brand_name, :id, :model %>
  </div>
    <div class = "field">
      <%= form.label "Рік випуску"%>
      <%= form.select(:car_year, @year)  %>
    </div>
    <div class = "field">
      <%= form.submit "Вибрати авто" %>
  <% end %>
</div>
